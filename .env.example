
NODE_ENV=development

# Backend API
PORT_BACKEND=4000
API_URL=http://localhost:4000
API_PREFIX=/api

# Frontend
PORT_FRONTEND=3000
VITE_API_URL=http://localhost:4000/api

# ========================================
# JWT & AUTHENTICATION
# ========================================

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-123456789

# Expira√ß√£o do token
JWT_EXPIRES_IN=24h
# Op√ß√µes: 15m | 1h | 24h | 7d

# N√∫mero de rounds do bcrypt para hash de senha
BCRYPT_ROUNDS=10

# ========================================
# DATABASE - PostgreSQL
# ========================================

# Database connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devxp
DB_USER=devxp_user
DB_PASSWORD=devxp_password_123

# Connection string (alternativa)
DATABASE_URL=postgresql://devxp_user:devxp_password_123@localhost:5432/devxp

# Connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# SSL Mode (production: require | development: disable)
DB_SSL_MODE=disable

# ========================================
# DOCKER
# ========================================

# PostgreSQL (Docker)
POSTGRES_USER=devxp_user
POSTGRES_PASSWORD=devxp_password_123
POSTGRES_DB=devxp

# PgAdmin (opcional - para gerenciar DB)
PGADMIN_EMAIL=admin@devxp.local
PGADMIN_PASSWORD=admin123

# ========================================
# LOGGING
# ========================================

# Log Level
LOG_LEVEL=info
# Op√ß√µes: error | warn | info | http | verbose | debug | silly

# Log File Path
LOG_DIR=./logs
LOG_FILE=devxp.log

# ========================================
# SECURITY
# ========================================

# CORS - Allowed Origins (separados por v√≠rgula)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
# 60000ms = 1 minuto

RATE_LIMIT_MAX_REQUESTS=100
# M√°ximo de requisi√ß√µes por janela

# ========================================
# EXTERNAL SERVICES
# ========================================

# PagBank API
PAGBANK_API_URL=https://api.pagbank.com
PAGBANK_API_KEY=your-pagbank-api-key
PAGBANK_TIMEOUT=5000

# IBM Services
IBM_API_URL=https://api.ibm.com
IBM_API_KEY=your-ibm-api-key
IBM_TIMEOUT=5000

# DevOps Tools
DEVOPS_API_URL=https://devops.yourcompany.com
DEVOPS_API_TOKEN=your-devops-token
DEVOPS_TIMEOUT=5000

# ========================================
# HEALTH CHECK
# ========================================

# Intervalo de health check (em minutos)
HEALTH_CHECK_INTERVAL=5

# Timeout para health checks (em milissegundos)
HEALTH_CHECK_TIMEOUT=3000


# ========================================
# üé® FRONTEND ESPEC√çFICO
# ========================================

# Vite
VITE_APP_NAME=DevXP
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_FEATURE_TEMPLATES=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_NOTIFICATIONS=false

# ========================================
# üîß DEVELOPMENT TOOLS
# ========================================

# Debug
DEBUG=devxp:*

# Hot Reload
CHOKIDAR_USEPOLLING=true
